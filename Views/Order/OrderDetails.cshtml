@model IEnumerable<P_CStore.Models.OrderDetailsDTO>

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Order Details</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                var base64Image = $"data:image/png;base64,{Convert.ToBase64String(item.Picture)}";

                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@base64Image" class="card-img-top" alt="@item.ProductName" style="object-fit: cover; height: 200px;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p class="card-text mb-1"><strong>Quantity:</strong> @item.Quantity</p>
                            <p class="card-text mb-1"><strong>Status:</strong> @item.Status</p>
                            <p class="card-text mb-0"><strong>Completed:</strong> @(item.CompletedDate.HasValue ? item.CompletedDate.Value.ToString("yyyy-MM-dd") : "Pending")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">No order details found.</div>
    }
</div>
