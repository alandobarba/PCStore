
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SuccessPayment</title>
    <link href="~/css/success.css" rel="stylesheet" />
</head>
<body>
    <div class="success-container">
        <div class="success-icon">✅</div>
        <h1>Purchase Successful</h1>
        <p>Thank you for your order!</p>
        <p>Your transaction has been completed successfully. A confirmation email with your order details has been sent to you.</p>

        <h1 style="text-align:center"><strong>Order Number:</strong> <strong>@Context.Request.Query["idTransaction"]</strong></h1>
        <p>Please Keep your order number for future refence.</p>
        <div class="actions">
            <a href="#" class="btn">View Order</a>
            <a href="/Home/index" class="btn secondary">Go Shopping</a>
        </div>

        <p class="support-text">Need help? <a href="#">Contact our support team</a>.</p>
    </div>
</body>
</html>
